{
  "name": "portfolio-backend",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "echo \"Building...\" && exit 0"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "mongoose": "^7.0.3",
    "nodemailer": "^6.9.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.2"
  },
  "vercel": {
    "version": 2,
    "builds": [
      {
        "src": "Back-End/server.js",
        "use": "@vercel/node",
        "config": {
          "includeFiles": [
            "Back-End/**/*.js",
            "Back-End/**/*.json"
          ]
        }
      }
    ],
    "routes": [
      {
        "src": "/api/(.*)",
        "dest": "Back-End/server.js",
        "methods": ["GET", "POST", "PUT", "DELETE", "OPTIONS"]
      },
      {
        "src": "/(.*)",
        "dest": "Back-End/server.js",
        "methods": ["GET"]
      }
    ]
  },
  "engines": {
    "node": ">=16.0.0"
  }
}