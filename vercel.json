{
  "version": 2,
  "builds": [
    {
      "src": "Back-End/server.js",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["Back-End/**/*.js", "Back-End/**/*.json"]
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "Back-End/server.js",
      "methods": ["GET", "POST", "PUT", "DELETE", "OPTIONS"]
    },
    {
      "src": "/",
      "dest": "Front-End/dist/index.html"
    },
    {
      "src": "/(.*)",
      "dest": "Front-End/dist/$1"
    }
  ]
}